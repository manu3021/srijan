#include<stdio.h>
#include<conio.h>
void main(void)
{
int i,n;
long number,sum=0;  float average;
clrscr();
printf("enter value of n:");
scanf("%d",&n);
for(i=1;i<=n;i++)
{
printf("Enter real number %d:",i);
scanf("%ld",&number);
sum+=number;
printf("sum %d \n",sum);
}
printf("Sum of total numbers are: %ld\n",sum);
average = sum/n;
printf("Average of the numbers is : %.2f\n",average);
getch();
}